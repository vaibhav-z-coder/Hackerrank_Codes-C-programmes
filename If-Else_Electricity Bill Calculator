#include <stdio.h>

int main() {
int unit;
  float amt;
  scanf("%d", &unit);
  if(unit<0){
    printf("Invalid Input!");
    return 0;
  }
  else if(unit<=100){
    amt=unit*5;

  }
  else if(unit>100 && unit<=300){
    amt=100*5 + (unit-100)*7 ;

  }
  else if(unit>300){
     amt=100*5 +200*7+ (unit-300)*10;
  
  }

  
  if(amt<=1200){
    amt=amt-(amt*0.10);
  }
    printf("The electricity bill is: %.2f.", amt);
    return 0;
}
